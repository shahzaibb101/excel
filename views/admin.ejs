<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
        body {
            margin-top: 20px;
            background: #f8f8f8;
        }
    </style>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row flex-lg-nowrap mt-4">
            <div class="col">
                <div class="e-tabs mb-3 px-3">
                    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="active-polls-tab" data-bs-toggle="tab" href="#active-polls"
                                role="tab" aria-controls="active-polls" aria-selected="true">Active Polls</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="excel-files-tab" data-bs-toggle="tab" href="#excel-files" role="tab"
                                aria-controls="excel-files" aria-selected="false">Excel Files</a>
                        </li>
                        <!-- Completed Polls Tab -->
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="completed-polls-tab" data-bs-toggle="tab" href="#completed-polls"
                                role="tab" aria-controls="completed-polls" aria-selected="false">Completed Polls</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">

                        <!-- Active Polls Tab Content -->
                        <div class="tab-pane fade show active" id="active-polls" role="tabpanel"
                            aria-labelledby="active-polls-tab">
                            <div class="row flex-lg-nowrap">
                                <div class="col mb-3">
                                    <div class="e-panel card">
                                        <div class="card-body">
                                            <div class="e-table">
                                                <div class="table-responsive table-lg mt-3">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th class="max-width">Title</th>
                                                                <th class="sortable">Option 1</th>
                                                                <th class="sortable">Option 2</th>
                                                                <th class="sortable">Option 3</th>
                                                                <th>Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% polls.forEach(function(poll) { %>
                                                                <tr>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.title %>
                                                                    </td>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.option1 %>
                                                                    </td>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.option2 %>
                                                                    </td>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.option3 %>
                                                                    </td>
                                                                    <td class="text-center align-middle">
                                                                        <div class="btn-group align-top">
                                                                            <button
                                                                                class="btn btn-sm btn-outline-secondary"
                                                                                type="button" data-bs-toggle="modal"
                                                                                data-bs-target="#edit-poll-modal-<%= poll._id %>">Edit</button>
                                                                            <button
                                                                                class="btn btn-sm btn-outline-danger"
                                                                                type="button"
                                                                                onclick="endPoll('<%= poll._id %>')">End
                                                                                Poll</button>
                                                                            <button
                                                                                class="btn btn-sm btn-outline-secondary"
                                                                                type="button"
                                                                                onclick="deletePoll('<%= poll._id %>')"><i
                                                                                    class="fa fa-trash"></i></button>
                                                                        </div>
                                                                    </td>
                                                                </tr>

                                                                <!-- Edit Poll Modal -->
                                                                <div class="modal fade"
                                                                    id="edit-poll-modal-<%= poll._id %>" tabindex="-1"
                                                                    aria-labelledby="edit-poll-modal-label-<%= poll._id %>"
                                                                    aria-hidden="true">
                                                                    <div class="modal-dialog modal-lg">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title"
                                                                                    id="edit-poll-modal-label-<%= poll._id %>">
                                                                                    Edit Poll</h5>
                                                                                <button type="button" class="btn-close"
                                                                                    data-bs-dismiss="modal"
                                                                                    aria-label="Close"></button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <form class="form"
                                                                                    action="/update-poll/<%= poll._id %>"
                                                                                    method="POST" novalidate="">
                                                                                    <div class="mb-3">
                                                                                        <label for="title"
                                                                                            class="form-label">Title</label>
                                                                                        <input class="form-control"
                                                                                            type="text" id="title"
                                                                                            name="title"
                                                                                            value="<%= poll.title %>"
                                                                                            required>
                                                                                    </div>
                                                                                    <div class="mb-3">
                                                                                        <label for="option1"
                                                                                            class="form-label">Option
                                                                                            1</label>
                                                                                        <input class="form-control"
                                                                                            type="text" id="option1"
                                                                                            name="option1"
                                                                                            value="<%= poll.option1 %>"
                                                                                            required>
                                                                                    </div>
                                                                                    <div class="mb-3">
                                                                                        <label for="option2"
                                                                                            class="form-label">Option
                                                                                            2</label>
                                                                                        <input class="form-control"
                                                                                            type="text" id="option2"
                                                                                            name="option2"
                                                                                            value="<%= poll.option2 %>"
                                                                                            required>
                                                                                    </div>
                                                                                    <div class="mb-3">
                                                                                        <label for="option3"
                                                                                            class="form-label">Option
                                                                                            3</label>
                                                                                        <input class="form-control"
                                                                                            type="text" id="option3"
                                                                                            name="option3"
                                                                                            value="<%= poll.option3 %>"
                                                                                            required>
                                                                                    </div>
                                                                                    <div class="row">
                                                                                        <div
                                                                                            class="col d-flex justify-content-end">
                                                                                            <button
                                                                                                class="btn btn-primary"
                                                                                                type="submit">Save
                                                                                                Changes</button>
                                                                                        </div>
                                                                                    </div>
                                                                                </form>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-3 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="text-center px-xl-3">
                                                <button class="btn btn-success btn-block" type="button" style="background-color: #34bf49; border-color: #34bf49;"
                                                    data-bs-toggle="modal" data-bs-target="#new-poll-modal">New
                                                    Poll</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- New Poll Modal -->
                            <div class="modal fade" id="new-poll-modal" tabindex="-1"
                                aria-labelledby="new-poll-modal-label" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="new-poll-modal-label">Create New Poll</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form class="form" action="/create-poll" method="POST" novalidate="">
                                                <div class="mb-3">
                                                    <label for="new-title" class="form-label">Title</label>
                                                    <input class="form-control" type="text" id="new-title" name="title"
                                                        placeholder="Poll Title" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="new-option1" class="form-label">Option 1</label>
                                                    <input class="form-control" type="text" id="new-option1"
                                                        name="option1" placeholder="Option 1" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="new-option2" class="form-label">Option 2</label>
                                                    <input class="form-control" type="text" id="new-option2"
                                                        name="option2" placeholder="Option 2" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="new-option3" class="form-label">Option 3</label>
                                                    <input class="form-control" type="text" id="new-option3"
                                                        name="option3" placeholder="Option 3" required>
                                                </div>
                                                <div class="row">
                                                    <div class="col d-flex justify-content-end">
                                                        <button class="btn btn-primary" type="submit">Create
                                                            Poll</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Completed Polls Tab Content -->
                        <div class="tab-pane fade" id="completed-polls" role="tabpanel"
                            aria-labelledby="completed-polls-tab">
                            <div class="row flex-lg-nowrap">
                                <div class="col mb-3">
                                    <div class="e-panel card">
                                        <div class="card-body">
                                            <div class="e-table">
                                                <div class="table-responsive table-lg mt-3">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th class="max-width">Title</th>
                                                                <th>Option 1 Votes</th>
                                                                <th>Option 2 Votes</th>
                                                                <th>Option 3 Votes</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% completedPolls.forEach(function(poll) { %>
                                                                <tr>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.title %>
                                                                    </td>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.votes1 %> votes
                                                                    </td>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.votes2 %> votes
                                                                    </td>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= poll.votes3 %> votes
                                                                    </td>
                                                                </tr>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Excel Files Tab Content -->
                        <div class="tab-pane fade" id="excel-files" role="tabpanel" aria-labelledby="excel-files-tab">
                            <div class="row flex-lg-nowrap">
                                <div class="col mb-3">
                                    <div class="e-panel card">
                                        <div class="card-body">
                                            <div class="e-table">
                                                <div class="table-responsive table-lg mt-3">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th class="max-width">Title</th>
                                                                <th class="sortable">Link</th>
                                                                <th>Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% excelfiles.forEach(function(file) { %>
                                                                <tr>
                                                                    <td class="text-nowrap align-middle">
                                                                        <%= file.title %>
                                                                    </td>
                                                                    <td class="text-nowrap align-middle"><a
                                                                            href="<%= file.link %>" target="_blank">
                                                                            <%= file.link %>
                                                                        </a></td>
                                                                    <td class="text-center align-middle">
                                                                        <div class="btn-group align-top">
                                                                            <button
                                                                                class="btn btn-sm btn-outline-secondary"
                                                                                type="button" data-bs-toggle="modal"
                                                                                data-bs-target="#edit-excel-file-modal-<%= file._id %>">Edit</button>
                                                                            <button
                                                                                class="btn btn-sm btn-outline-danger"
                                                                                type="button"
                                                                                onclick="deleteExcelFile('<%= file._id %>')"><i
                                                                                    class="fa fa-trash"></i></button>
                                                                        </div>
                                                                    </td>
                                                                </tr>

                                                                <!-- Edit Excel File Modal -->
                                                                <div class="modal fade"
                                                                    id="edit-excel-file-modal-<%= file._id %>"
                                                                    tabindex="-1"
                                                                    aria-labelledby="edit-excel-file-modal-label-<%= file._id %>"
                                                                    aria-hidden="true">
                                                                    <div class="modal-dialog modal-lg">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title"
                                                                                    id="edit-excel-file-modal-label-<%= file._id %>">
                                                                                    Edit Excel File</h5>
                                                                                <button type="button" class="btn-close"
                                                                                    data-bs-dismiss="modal"
                                                                                    aria-label="Close"></button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <form class="form"
                                                                                    action="/update-excel-file/<%= file._id %>"
                                                                                    method="POST" novalidate="">
                                                                                    <div class="mb-3">
                                                                                        <label for="title"
                                                                                            class="form-label">Title</label>
                                                                                        <input class="form-control"
                                                                                            type="text" id="title"
                                                                                            name="title"
                                                                                            value="<%= file.title %>"
                                                                                            required>
                                                                                    </div>
                                                                                    <div class="mb-3">
                                                                                        <label for="link"
                                                                                            class="form-label">Link</label>
                                                                                        <input class="form-control"
                                                                                            type="text" id="link"
                                                                                            name="link"
                                                                                            value="<%= file.link %>"
                                                                                            required>
                                                                                    </div>
                                                                                    <div class="row">
                                                                                        <div
                                                                                            class="col d-flex justify-content-end">
                                                                                            <button
                                                                                                class="btn btn-primary"
                                                                                                type="submit">Save
                                                                                                Changes</button>
                                                                                        </div>
                                                                                    </div>
                                                                                </form>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-3 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="text-center px-xl-3">
                                                <button class="btn btn-success btn-block" type="button" style="background-color: #34bf49; border-color: #34bf49;"
                                                    data-bs-toggle="modal" data-bs-target="#new-excel-file-modal">New
                                                    Excel File</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- New Excel File Modal -->
                <div class="modal fade" id="new-excel-file-modal" tabindex="-1"
                    aria-labelledby="new-excel-file-modal-label" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="new-excel-file-modal-label">Upload New Excel File</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form class="form" action="/create-excel-file" method="POST" novalidate="">
                                    <div class="mb-3">
                                        <label for="title" class="form-label">Title</label>
                                        <input class="form-control" type="text" id="title" name="title"
                                            placeholder="File Title" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="link" class="form-label">Link</label>
                                        <input class="form-control" type="text" id="link" name="link"
                                            placeholder="File Link" required>
                                    </div>
                                    <div class="row">
                                        <div class="col d-flex justify-content-end">
                                            <button class="btn btn-primary" type="submit">Upload File</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                    crossorigin="anonymous"></script>
                <script>
                    function deleteExcelFile(id) {
                        fetch(`/delete-excel-file/${id}`, {
                            method: 'DELETE',
                        }).then(response => {
                            if (response.ok) {
                                location.reload();
                            } else {
                                alert('Error deleting file');
                            }
                        });
                    }

                    function deletePoll(id) {
                        fetch(`/delete-poll/${id}`, {
                            method: 'DELETE',
                        }).then(response => {
                            if (response.ok) {
                                location.reload();
                            } else {
                                alert('Error deleting poll');
                            }
                        });
                    }

                    function endPoll(id) {
                        fetch(`/end-poll/${id}`, {
                            method: 'POST',
                        }).then(response => {
                            if (response.ok) {
                                location.reload();
                            } else {
                                alert('Error ending poll');
                            }
                        });
                    }
                </script>
</body>

</html>